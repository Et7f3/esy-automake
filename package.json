{
  "name": "esy-automake",
  "version": "1.0.000",
  "description": "Automake packaged for esy",
  "esy": {
    "buildsInSource": true,
    "buildEnv": {
      "PATH": "#{self.bin : $PATH }"
    },
    "build": [
      ["chmod", "755", "./configure", "./mkinstalldirs"],
      ["ln", "-s", "/usr/bin/true", "#{ self.bin / 'makeinfo' }"],
      ["bash", "-c", "#{os == 'windows' ? './configure --prefix=$cur__install --host x86_64-w64-mingw32' : './configure --prefix=$cur__install'}"],
      ["make"],
      ["make", "install"]
    ]
  },
  "dependencies": {"esy-autoconf": "*"},
  "resolutions": {"esy-autoconf": "esy-packages/esy-autoconf#0c3e47a7f29420d4329ad533aa73c22c0617f05a"}
}
